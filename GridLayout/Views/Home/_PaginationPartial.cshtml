<div>
    @if ((int)ViewData["TotalRecords"] > 10)
    {
        int recordPerPage = (int)ViewData["RecordPerPage"];
        decimal totalRecords = (int)ViewData["TotalRecords"];
        decimal PageCount = Math.Ceiling(totalRecords / recordPerPage);

        @*<div id="pagination" class="row text-center">*@
        <nav>
            <ul id="ulPagination" class="pagination">
                <li>
                    <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @for (int i = 1; i <= PageCount; i++)
                        {
                        <li><a href="#">@i</a></li>
                        }

                <li>
                    <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        @*</div>*@
    }
</div>
